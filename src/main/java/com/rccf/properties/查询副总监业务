SELECT *
FROM employee
  LEFT JOIN
  (SELECT
     sum(service_fee_actual) AS dy_fee,
     deputy_director         AS dy
   FROM accepted
   WHERE deputy_director IN (SELECT code
                             FROM employee) && create_time >= DATE_FORMAT('2017-09-01 00:00:00', '%Y-%m-%d %H:%i:%S') group by deputy_director)
    AS dy
    ON dy.dy = employee.code
  LEFT JOIN
  (SELECT
     sum(service_fee_actual) AS my_fee,
     deputy_director         AS my
   FROM accepted
   WHERE deputy_director IN (SELECT code
                             FROM employee) && create_time >= DATE_FORMAT('2017-09-01 00:00:00', '%Y-%m-%d %H:%i:%S') group by deputy_director)
    AS my
    ON my.my = employee.code
  LEFT JOIN
  (SELECT
     count(*)        AS d_1,
     deputy_director AS deputy1
   FROM accepted
   WHERE deputy_director IN (SELECT code
                             FROM employee) && accepted.state = 1 &&
         create_time >= DATE_FORMAT('2017-09-01 00:00:00', '%Y-%m-%d %H:%i:%S') group by deputy_director)
    AS d1
    ON d1.deputy1 = employee.code
  LEFT JOIN
  (SELECT
     count(*)        AS d_2,
     deputy_director AS deputy2
   FROM accepted
   WHERE deputy_director IN (SELECT code
                             FROM employee) && accepted.state = 2 &&
         create_time >= DATE_FORMAT('2017-09-01 00:00:00', '%Y-%m-%d %H:%i:%S') group by deputy_director)
    AS d2
    ON d2.deputy2 = employee.code
  LEFT JOIN
  (SELECT
     count(*)        AS d_3,
     deputy_director AS deputy3
   FROM accepted
   WHERE deputy_director IN (SELECT code
                             FROM employee) && accepted.state = 2 &&
         create_time >= DATE_FORMAT('2017-09-01 00:00:00', '%Y-%m-%d %H:%i:%S') group by deputy_director)
    AS d3
    ON d3.deputy3 = employee.code
  LEFT JOIN
  (SELECT
     count(*)        AS m_1,
     deputy_director AS m_deputy1
   FROM accepted
   WHERE deputy_director IN (SELECT code
                             FROM employee) && accepted.state = 1 &&
         create_time >= DATE_FORMAT('2017-09-01 00:00:00', '%Y-%m-%d %H:%i:%S') group by deputy_director)
    AS m1
    ON m1.m_deputy1 = employee.code
  LEFT JOIN
  (SELECT
     count(*)        AS m_2,
     deputy_director AS m_deputy2
   FROM accepted
   WHERE deputy_director IN (SELECT code
                             FROM employee) && accepted.state = 2 &&
         create_time >= DATE_FORMAT('2017-09-01 00:00:00', '%Y-%m-%d %H:%i:%S') group by deputy_director)
    AS m2
    ON m2.m_deputy2 = employee.code
  LEFT JOIN
  (SELECT
     count(*)        AS m_3,
     deputy_director AS m_deputy3
   FROM accepted
   WHERE deputy_director IN (SELECT code
                             FROM employee) && accepted.state = 3 &&
         create_time >= DATE_FORMAT('2017-09-01 00:00:00', '%Y-%m-%d %H:%i:%S') group by deputy_director)
    AS m3
    ON m3.m_deputy3 = employee.code
  LEFT JOIN
  (SELECT count(*) as coun ,clerk as cl,deputy_director as de,deputy_director from accepted GROUP BY clerk,deputy_director)
    AS coun
    ON coun.de = employee.code
WHERE role = 3 AND  state=1;